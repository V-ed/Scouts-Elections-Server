{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Activate Server Debug",
			"type": "shell",
			"command": "/home/ved/scripts/start-https-debugger.sh",
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Deactivate Server Debug",
			"type": "shell",
			"command": "/home/ved/scripts/stop-https-debugger.sh",
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Restart Server",
			"type": "shell",
			"command": "sudo systemctl restart central-https && echo 'HTTPS Server restarted!'",
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		}
	]
}
